<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_bt_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib_switch_wallet_close"
        android:layout_centerHorizontal="true"
        android:text="@string/change_wallet"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/title_small_16sp" />

    <ImageButton
        android:id="@+id/ib_switch_wallet_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:src="@drawable/switch_close" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_me_switch_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_switch_wallet_close"
        android:layout_marginTop="10dp"
        android:divider="@color/c_DDDDDD" />


</RelativeLayout>