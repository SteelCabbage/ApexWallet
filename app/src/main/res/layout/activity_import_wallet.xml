<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.wallet.ImportWalletActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tb_bg_narrow_height"
        android:background="@drawable/tb_bg_narrow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/import_wallet"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_me_title_size" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_import_wallet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/c_1253BF"
        app:tabSelectedTextColor="@color/c_1253BF"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/c_666666" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_import_wallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>