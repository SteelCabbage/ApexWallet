<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="@string/tv_confirm_mnemonic"
        android:textColor="@color/tv_copy_mnemonic_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tv_confirm_mnemonic_content"
        android:textColor="@color/create_wallet_et_import_color"
        android:textSize="12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_confirm_mnemonic_show"
        android:layout_width="336dp"
        android:layout_height="140dp"
        android:layout_marginTop="21dp"
        android:padding="5dp"
        android:background="@drawable/shape_bg_copy_mnemonic" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_confirm_mnemonic_click"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/bt_confirm_mnemonic_confirm"
        android:layout_width="293dp"
        android:layout_height="39dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/shape_new_visitor_bt_bg"
        android:text="@string/bt_confirm_mnemonic_confirm"
        android:textColor="@android:color/white" />


</LinearLayout>