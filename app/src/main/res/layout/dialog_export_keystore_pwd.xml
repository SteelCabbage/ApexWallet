<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="159dp"
    android:background="@drawable/gradient_dialog_pwd_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="@string/tv_dialog_pwd_title"
            android:textColor="@color/c_030303"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dialog_pwd_export_keystore"
            android:layout_width="211dp"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@android:color/white"
            android:hint="@string/et_dialog_pwd_hint"
            android:inputType="textPassword"
            android:textColorHint="#C7C7CD"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/ll_dialog_pwd_backup"
        android:background="@color/c_DDDDDD" />

    <LinearLayout
        android:id="@+id/ll_dialog_pwd_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_dialog_pwd_export_keystore_cancel"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/bt_dialog_pwd_cancel"
            android:textColor="#007AFF"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="39dp"
            android:background="@color/c_DDDDDD" />

        <Button
            android:id="@+id/bt_dialog_pwd_export_keystore_confirm"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/bt_dialog_pwd_confirm"
            android:textColor="#E16A67"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>