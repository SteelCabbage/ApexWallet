<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tv_genera_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:text="item name"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/paratext_14sp" />

    <TextView
        android:id="@+id/tv_genera_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_genera_arrows"
        android:singleLine="true"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/paratext_14sp" />

    <ImageView
        android:id="@+id/iv_genera_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/icon_arrows" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c_E5E5E5" />

</RelativeLayout>