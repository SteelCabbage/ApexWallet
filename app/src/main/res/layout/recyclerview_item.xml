<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rl_assets_rv_item_height"
                android:background="@drawable/shape_assets_rv_item_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/ll_assets_rv_item_padding">

        <TextView
            android:id="@+id/tv_assets_rv_item_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assets_rv_item_wallet_name"
            android:textSize="@dimen/tv_assets_rv_item_wallet_name_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_assets_rv_item_wallet_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assets_rv_item_wallet_addr"/>

    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/v_assets_rv_item"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/v_assets_rv_item_margin_end"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_assets_rv_item_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/tv_assets_rv_item_balance_margin_end"
        android:text="@string/tv_assets_rv_item_balance"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tv_assets_rv_item_balance_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_assets_rv_item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/tv_assets_rv_item_unit_margin_end"
        android:text="@string/tv_assets_rv_item_unit"
        android:textColor="@color/colorPrimary"/>


</RelativeLayout>