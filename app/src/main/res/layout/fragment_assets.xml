<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_assets"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:background="@drawable/tb_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fragment_assets_title_margin_top"
                android:text="@string/tb_title_main"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tb_title_size" />

            <ImageButton
                android:id="@+id/ib_assets_ellipsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:background="@null"
                android:src="@drawable/icon_ellipsis" />

            <LinearLayout
                android:id="@+id/ll_assets_search"
                android:layout_width="263dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="26dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/shape_bg_search"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/icon_search" />

                <EditText
                    android:id="@+id/et_assets_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:background="@null"
                    android:hint="@string/et_assets_search"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_assets_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_assets_search"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="@string/tv_assets_search_cancel"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sl_assets_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rv_assets_margin_start"
            android:layout_marginStart="@dimen/rv_assets_margin_end"
            android:layout_marginTop="@dimen/rv_assets_margin_top">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_assets"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_assets_drawer"
        android:layout_width="@dimen/ll_wallet_detail_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_assets_drawer_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:divider="@null">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>