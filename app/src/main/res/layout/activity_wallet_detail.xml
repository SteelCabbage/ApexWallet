<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_wallet_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:background="@drawable/tb_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wallet_detail_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_assets_title_margin_top"
                android:text="CPX"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/tb_title_size" />

            <TextView
                android:id="@+id/tv_wallet_detail_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="2.0032"
                android:textColor="@color/text_color_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_balance_detail_advance_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="16.11(2.36%)"
                android:textColor="@color/balance_detail_decline"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_wallet_detail_transfer"
                android:layout_width="@dimen/bt_wallet_detail_tx_width"
                android:layout_height="@dimen/bt_wallet_detail_tx_height"
                android:background="@drawable/shape_new_visitor_bt_bg"
                android:text="@string/bt_wallet_detail_tx_transfer"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/bt_wallet_detail_tx_font_size" />

            <Button
                android:id="@+id/bt_wallet_detail_gathering"
                android:layout_width="@dimen/bt_wallet_detail_tx_width"
                android:layout_height="@dimen/bt_wallet_detail_tx_height"
                android:layout_marginStart="12dp"
                android:background="@drawable/shape_new_visitor_bt_bg"
                android:text="@string/bt_wallet_detail_tx_gathering"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/bt_wallet_detail_tx_font_size" />

        </LinearLayout>
    </LinearLayout>

    <!--侧滑内容-->
    <LinearLayout
        android:layout_width="@dimen/ll_wallet_detail_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wallet_detail_drawer_title"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@color/tv_wallet_detail_drawer_title"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/tv_wallet_detail_drawer_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_wallet_detail_drawer_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
