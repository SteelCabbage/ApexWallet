<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/iv_choose_wallet_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/logo_global_neo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/iv_choose_wallet_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wallet_name"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/title_small_16sp" />

        <TextView
            android:id="@+id/tv_choose_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:ems="12"
            android:singleLine="true"
            android:text="wallet_address"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/paratext_14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_choose_wallet_check_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_checked_asset" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/c_DDDDDD" />

</RelativeLayout>